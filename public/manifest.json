{
  "manifest_version": 3,
  "name": "CF & LC Recall",
  "description": "Practice Codeforces and Leetcode problems using spaced repetition technique.",
  "version": "0.1",

  "action": {
    "default_popup": "index.html"
  },

  "background": {
    "service_worker": "background/serviceWorker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": [
        "https://codeforces.com/problemset/problem/*/*",
        "https://codeforces.com/contest/*/problem/*"
      ],
      "js": ["/contentScripts/codeforces.js"]
    },
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["/contentScripts/leetcode.js"]
    }
  ],

  "permissions": ["storage", "tabs"],

  "icons": {
    "128": "/icons/icon.png"
  }
}
